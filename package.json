{
  "name": "shameleon",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && (./gradlew bootRun || gradlew.bat bootRun)",
    "dev:frontend": "npm run dev --prefix frontend",
    "start:db": "cd infra && docker compose up -d",
    "stop:db": "cd infra && docker compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}